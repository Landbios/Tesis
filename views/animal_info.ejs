<body style="background:#90a955">
    <header>
        <%- include('partials/header.ejs',{username:name},{login:login},{page_name:page_name}); %>
    </header>
    <main>
        <section class="py-4 animalinfo_container">
            <div class="container px-4 px-lg-5 my-5">
                <div class="row gx-4 gx-lg-5 align-items-center">
                    <div class="col-md-6"><img class="card-img mb-4 mb-md-0"
                            src="https://images.unsplash.com/photo-1543466835-00a7907e9de1?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=774&q=80"
                            alt="..." /></div>
                    <div class="col-md-6">
                        <h1 class="display-5 fw-bolder formtitle" id="nombre"></h1>
                        <div class="fs-5 mb-2">
                            <p><b>Dueño:</b> <span id="propietario"></span></p>
                            <p><b>Teléfono:</b> <span id="tlf" style="color: blue"></span></p>
                            <p><b>Especie:</b> <span id="especie"></span></p>
                            <p><b>Raza:</b> <span id="raza"></span></p>
                            <p><b>Genero:</b> <span id="genero"></span></p>
                            <p><b>Vacunado:</b> <span id="es_vacunado"></span></p>
                            <p><b>Esterilizado(a):</b> <span id="es_esterilizado"></span></p>
                            <p><b>Edad:</b> <span id="edad"></span></p>
                            <p><b>Ubicacion:</b> <span id="ubicacion"></span></p>
                            <p><b>Descripción:</b></p>
                            <p class="lead mb-4" id="descripcion"></p>  
                            <button class="btn btn-outline-dark modify">Modificar</button>
                            <button class="btn btn-outline-dark delete">Borrar</button>
                        </div>
                        <div class="d-flex">
                            <p class="msg"></p>
                            <button class="btn btn-outline-dark flex-shrink-0 btn-hero" type="button"
                                id="adoption-link">
                                <i class="bi-cart-fill me-1"></i>
                                Adoptar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Related items section-->
        <section class="py-2">
            <div class="container  mt-2">
                <h2 class="fw-bolder mb-4 formtitle">Otros Animales</h2>
                <div class="row gx-2 gx-lg-3 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                    <div class="col mb-5">
                        <div class="card">
                            <img class="card-img-top"
                                src="https://images.unsplash.com/photo-1561495376-dc9c7c5b8726?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=580&q=80"
